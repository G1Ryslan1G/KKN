<Page x:Class="KKHProject.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KKHProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация" FontSize="24">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label>Логин:</Label>
            <TextBox x:Name="TxtLogin" Margin="10" Width="300"/>
            <Label>Пароль:</Label>
            <TextBox x:Name="TxtPassword" Margin="10"/>
            <Button x:Name="BltLogin" Width="200" Click="BltLogin_Click">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
