<Window x:Class="KKHProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KKHProject"
        mc:Ignorable="d"
        Title="KKN+" Height="600" Width="800" FontSize="24">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Height="132" Margin="0,-7,0,1">
            <Image Margin="10,10" Source="logo.jpg" Height="111" Width="428" />
            <Label x:Name="TitlePageName" Content="" HorizontalAlignment="Left" Margin="15,53,0,0" VerticalAlignment="Top" Height="42" Width="187"/>
            <Button x:Name="BackBtn" Content="Назад" HorizontalAlignment="Left" Margin="20,53,0,0" VerticalAlignment="Top" Click="BackBtn_Click" Height="48" Width="98"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </StackPanel>
    </Grid>
</Window>
